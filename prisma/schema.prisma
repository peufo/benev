generator client {
  provider = "prisma-client-js"
}

generator json {
  provider = "prisma-json-types-generator"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @unique

  email           String  @unique
  phone           String?
  firstName       String
  lastName        String
  isOrganizer     Boolean @default(false)
  isTermsAccepted Boolean @default(false)

  birthday DateTime?
  street   String?
  zipCode  String?
  city     String?

  tokens          Token[]
  isEmailVerified Boolean @default(false)

  avatarId          String? @unique
  avatar            Media?  @relation(name: "avatar", references: [id], fields: [avatarId], onDelete: SetNull)
  avatarPlaceholder String  @default("") // remove default value after migration

  wantsNotification Boolean @default(true)

  members Member[]
  events  Event[] // ownerOf

  auth_session Session[]
  auth_key     Key[]
  medias       Media[]
  messages     Message[]
  licences     Licence[]
  checkouts    Checkout[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Licence {
  id   String      @id @default(cuid())
  type LicenceType

  memberId String? @unique
  member   Member? @relation(references: [id], fields: [memberId], onDelete: SetNull)
  eventId  String? @unique
  event    Event?  @relation(references: [id], fields: [eventId], onDelete: SetNull, onUpdate: Cascade)

  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  checkoutId String
  checkout   Checkout @relation(fields: [checkoutId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

enum LicenceType {
  event
  member
}

model Checkout {
  id        String    @id @unique @default(cuid())
  name      String?
  licences  Licence[]
  amount    Int
  currency  String    @default("CHF")
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())
}

model Session {
  id             String @id @unique
  user_id        String
  active_expires BigInt
  idle_expires   BigInt
  user           User   @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
}

model Key {
  id              String  @id @unique
  hashed_password String?
  user_id         String
  user            User    @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
}

model Token {
  id      String    @id
  type    TokenType
  expires BigInt
  userId  String
  user    User      @relation(references: [id], fields: [userId], onDelete: Cascade)
}

enum TokenType {
  emailVerification
  passwordReset
}

model Event {
  id        String     @id @unique
  name      String     @unique
  state     EventState @default(draft)
  activedAt DateTime? // TODO: remove ?
  deletedAt DateTime?
  ownerId   String
  owner     User       @relation(references: [id], fields: [ownerId], onDelete: Cascade)

  licence               Licence?
  missingLicencesMember Int      @default(0)

  description String?
  icon        String?

  email     String?
  phone     String?
  address   String?
  timezone  Int     @default(-120)
  web       String?
  facebook  String?
  instagram String?

  logoId   String? @unique
  logo     Media?  @relation(name: "logo", fields: [logoId], references: [id], onDelete: SetNull)
  posterId String? @unique
  poster   Media?  @relation(name: "poster", fields: [posterId], references: [id], onDelete: SetNull)

  teams        Team[]
  pages        Page[]
  members      Member[]
  memberFields Field[]
  gifts        Gift[]
  views        View[]
  medias       Media[]

  // Settings
  selfRegisterAllowed  Boolean   @default(true)
  selfSubscribeAllowed Boolean   @default(true)
  closeSubscribing     DateTime?
  userAddressRequired  Boolean   @default(false)
  userPhoneRequired    Boolean   @default(false)
  userBirthdayRequired Boolean   @default(false)
  userAvatarRequired   Boolean   @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum EventState {
  draft
  actived
  published
  archived
}

model Field {
  id              String    @id @default(cuid())
  eventId         String
  event           Event     @relation(references: [id], fields: [eventId], onDelete: Cascade, onUpdate: Cascade)
  type            FieldType
  name            String
  label           String?
  position        Int       @default(0)
  memberCanWrite  Boolean
  memberCanRead   Boolean
  allCombinations Boolean   @default(false)
  required        Boolean   @default(false)
  description     String?
  options         String?   @db.Text()
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@unique([eventId, name])
}

enum FieldType {
  string
  textarea
  number
  boolean
  select
  multiselect
}

model Member {
  id String @id @default(cuid())

  isAdmin          Boolean @default(false)
  isValidedByEvent Boolean @default(false)
  isValidedByUser  Boolean @default(false)

  userId  String
  user    User   @relation(references: [id], fields: [userId], onDelete: Cascade)
  eventId String
  event   Event  @relation(references: [id], fields: [eventId], onDelete: Cascade, onUpdate: Cascade)

  licence Licence?

  /// [MemberProfile]
  profileJson Json @default("{}")

  subscribes       Subscribe[]
  leaderOf         Team[]
  giftsAllocations GiftAllocation[]
  views            View[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, eventId])
}

model Page {
  id String @id @default(cuid())

  eventId String
  event   Event  @relation(references: [id], fields: [eventId], onDelete: Cascade, onUpdate: Cascade)

  title String
  path  String @default("")
  index Int    @default(0)

  type        PageType @default(public)
  content     String   @db.Text
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@unique([eventId, path])
}

enum PageType {
  home
  charter
  public
  member
  email
}

model Team {
  id String @id @default(cuid())

  name             String
  description      String?   @db.Text
  leaders          Member[]
  closeSubscribing DateTime?
  /// [MemberConditions]
  conditions       Json?

  eventId String
  event   Event    @relation(references: [id], fields: [eventId], onDelete: Cascade, onUpdate: Cascade)
  periods Period[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, eventId])
}

model Period {
  id String @id @default(cuid())

  start        DateTime
  end          DateTime
  maxSubscribe Int         @default(1)
  teamId       String
  team         Team        @relation(references: [id], fields: [teamId], onDelete: Cascade)
  subscribes   Subscribe[]
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

model Subscribe {
  id String @id @default(cuid())

  state     SubscribeState     @default(request)
  createdBy SubscribeCreatedBy @default(user)

  periodId String
  period   Period @relation(references: [id], fields: [periodId], onDelete: Cascade)

  memberId String
  member   Member @relation(references: [id], fields: [memberId], onDelete: Cascade)

  isAbsent Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([memberId, periodId])
}

model View {
  id String @id @default(cuid())

  name  String
  key   String
  query String @db.Text()

  eventId  String
  event    Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)
  authorId String
  author   Member @relation(fields: [authorId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([eventId, name, key])
}

enum SubscribeCreatedBy {
  user
  leader
}

enum SubscribeState {
  request
  accepted
  denied
  cancelled
}

model Media {
  id String @id @default(cuid())

  name     String
  avatarOf User?  @relation(name: "avatar")
  logoOf   Event? @relation(name: "logo")
  posterOf Event? @relation(name: "poster")

  eventId String?
  event   Event?  @relation(fields: [eventId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdById String
  createdBy   User     @relation(references: [id], fields: [createdById], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Gift {
  id             String             @id @default(cuid())
  name           String
  eventId        String
  event          Event              @relation(fields: [eventId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  allocations    GiftAllocation[]
  conditions     GiftCondition[]
  conditionsMode GiftConditionsMode @default(sum)

  @@unique([eventId, name])
}

enum GiftConditionsMode {
  sum
  highest
}

model GiftCondition {
  id String @id @default(cuid())

  type    GiftConditionType
  content String
  value   Int               @default(1)

  giftId String
  gift   Gift   @relation(fields: [giftId], references: [id], onDelete: Cascade)
}

enum GiftConditionType {
  teams
  period
  hours
}

model GiftAllocation {
  id String @id @default(cuid())

  giftId String
  gift   Gift   @relation(fields: [giftId], references: [id], onDelete: Cascade)

  memberId String
  member   Member @relation(fields: [memberId], references: [id], onDelete: Cascade)

  qteDue   Int
  qteGiven Int
}

model Message {
  id String @id @default(cuid())

  authorId String
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)

  state   MessageState @default(waitOnAgent)
  subject String
  content String       @db.Text()

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum MessageState {
  waitOnAgent
  waitOnAuthor
  done
}

model Prospect {
  id          String    @id @default(cuid())
  email       String    @unique
  name        String?
  site        String?
  lastContact DateTime?
  emailOpenAt DateTime?
  linkOpenAt  DateTime?
  comment     String?
  createdAt   DateTime  @default(now())
}
